{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es2020", "esnext.asynciterable"],
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

